@model SiteTeste.Models.Venda

@{
    ViewData["Title"] = "Details";
}

<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-8 mx-auto">
                <div class="card flex-row my-5 border-0 shadow rounded-3 overflow-hidden">
                    <div class="card-body p-4 p-sm-5">
                        <h5 class="card-title text-center mb-5 fw-light fs-5">Detalhes Venda</h5>
                        <dl class="row">
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Id):
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Id)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Id_modelo):
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Id_modelo)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Id_cliente):
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Id_cliente)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Quantidade):
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Quantidade)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Valor):
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Valor)
                            </dd>
                        </dl>
                        <div>
                            <a asp-action="Index" class="btn btn-outline-success btn-login">Listar Vendas</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>