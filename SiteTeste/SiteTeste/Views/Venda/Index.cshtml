@model IEnumerable<SiteTeste.Models.Venda>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color: white; text-align: center">Vendas</h1>
<p>
    <a asp-action="Create" style="padding: 10px" class="btn btn-primary">Realizar Compra</a>
    @*<a asp-controller="CadastroFornecedor" asp-action="Index">Adicionar Fornecedor</a>*@
</p>
<table class="table table-hover thead-dark table-borderless table-dark">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id_modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id_cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
        }
    </tbody>
</table>
