@model SiteTeste.Models.Modelo

@{
    ViewData["Title"] = "Edit";
}
<head>
    <link rel="stylesheet" href="~/css/CadastroModelos.css" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-9 mx-auto">
                <div class="card flex-row my-5 border-0 shadow rounded-3 overflow-hidden">
                    <div class="card-img-left d-none d-md-flex">
                    </div>
                    <div class="card-body p-4 p-sm-5">
                        <h5 class="card-title text-center mb-5 fw-light fs-5">Editar Modelo</h5>
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Id_Fornecedor" class="control-label"></label>
                                <input asp-for="Id_Fornecedor" class="form-control" placeholder="Adidas" />
                                <span asp-validation-for="Id_Fornecedor" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" placeholder="Sapato, Sandalia, Chinelo" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CodReferencia" class="control-label"></label>
                                <input asp-for="CodReferencia" class="form-control" placeholder="01" />
                                <span asp-validation-for="CodReferencia" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Cor" class="control-label"></label>
                                <input asp-for="Cor" class="form-control" placeholder="Preta" />
                                <span asp-validation-for="Cor" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Tamanho" class="control-label"></label>
                                <input asp-for="Tamanho" class="form-control" placeholder="Número" />
                                <span asp-validation-for="Tamanho" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Editar" class="btn btn-primary btn-login fw-bold" />
                            </div>
                        </form>
                        <br />
                        <div>
                            <a asp-action="Index" class="btn btn-outline-success btn-login">Listar Modelos</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
